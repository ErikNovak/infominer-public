<div class="container">

  {{! title }}
  <div class="row">
    <div class="col-sm-12">
      <h2 class="title">Datasets</h2>
      <p>Upload or select a dataset</p>
    </div>
  </div>

  {{! datasets list }}
  <div class="row">

    {{! add new dataset }}
    <div class="col-sm-6 col-md-4 col-lg-3">
      {{! Button trigger modal }}
      {{#link-to 'dataset-upload'}}
        <div class="dataset-container dataset-container--create">
          {{fa-icon 'folder-plus' class="dataset-container__icon" }}
          <p class="dataset-container__label">add new dataset</p>
        </div>
      {{/link-to}}
    </div>

    {{#each model as |dataset|}}
      {{! Add new dataset }}
      <div class="col-sm-6 col-md-4 col-lg-3">
        {{#if dataset.ready}}
          {{! Button trigger modal }}
          {{#link-to 'dataset.subset.analysis' dataset.id 0 }}
            <div class="dataset-container dataset-container--created">
              {{fa-icon 'database' class="dataset-container__icon" }}
              <p class="dataset-container__label">{{ dataset.label }}</p>
              <p class="dataset-container__date">Created: {{ dataset.date }}</p>
            </div>
          {{/link-to}}
        {{else}}
          <div class="dataset-container dataset-container--loading">
            {{fa-icon 'sync-alt' spin=true fixedWidth=true class="dataset-container__icon"}}
            <p class="dataset-container__label">{{ dataset.label }}</p>
            <p class="dataset-container__date">Loading...</p>
          </div>
        {{/if}}
      </div>
    {{/each}}

  </div>


</div>{{! .container-fluid }}

{{outlet}}