<div class="modal-dialog modal-dialog-centered modal-sm" role="document">

  <div class="modal-content">

    {{! modal header containing the title }}
    <div class="modal-header">
      <h4 class="modal-style--delete__title">Delete Subset</h4>
    </div>

    {{! modal body containing the description }}
    <div class="modal-body">
      <p class="modal-style--delete__description">
        Are you sure you want to delete this subset?
      </p>
      <p class="modal-style--delete__description">
        Label: <b class="subset uppercase">{{subsetLabel}}</b><br/>
        Derived from: <span class="subset">{{derivedFrom}}</span><br/>
        Created using: <span class="method">{{createdUsing}}</span><br/>
      </p>
      <p class="modal-style--delete__description">
        You will not be able to revert this action.
      </p>
    </div>

    {{! modal footer containing actions }}
    <div class="modal-footer">
      <button type="button" class="btn btn-light btn-rounded" data-dismiss="modal">Cancel</button>
      <button type="button" class="btn btn-danger btn-rounded" {{action 'delete'}}>
        Yes, Delete Subset
      </button>
    </div>

  </div>{{! modal-content }}

</div>{{! modal-dialog }}