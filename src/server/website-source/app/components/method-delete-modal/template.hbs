<!-- Edit subset modal -->
<div class="modal-dialog modal-dialog-centered modal-sm">
  <div class="modal-content">
    <!-- modal header -->
    <div class="modal-header">
      <h4 class="modal-title warning m-auto">Deleting method</h4>
      <!-- modal title -->
    </div>
    <div class="modal-body">

        <!-- subset label -->
        <p>Are you sure you want to delete this method?</p>
        <p>
          Method: <b class="method uppercase">{{label}}</b><br/>
          Applied on: <span class="subset">{{appliedOn}}</span><br/>
        </p>
        <span>You will not be able to revert this action.</span>

    </div><!-- .modal-body -->

    <div class="modal-footer">
      <button type="button" class="btn btn-light btn-rounded"
        data-dismiss="modal">Cancel</button>
      <button type="button" class="btn btn-danger btn-rounded"
        {{action 'delete'}}>Yes, delete method</button>
    </div>

  </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->