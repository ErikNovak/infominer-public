<div class="modal-dialog modal-dialog-centered modal-sm">
  <div class="modal-content">

    {{! modal header containing the title }}
    <div class="modal-header">
      <h4 class="modal-style--delete__title">Delete Method</h4>
    </div>

    <div class="modal-body">
        <p class="modal-style--delete__description">
          Are you sure you want to delete this method?
        </p>
        <p class="modal-style--delete__description">
          Method:     <b class="method uppercase">{{label}}</b><br/>
          Applied on: <span class="subset">{{appliedOn}}</span><br/>
        </p>
        <p class="modal-style--delete__description">
          You will not be able to revert this action.
        </p>
    </div>

    {{! modal footer containing actions }}
    <div class="modal-footer">
      {{#if loadingStatus}}
        <span class="loading-pulse"></span>
      {{else}}
        <button type="button" class="btn btn-light btn-rounded" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger btn-rounded" {{action 'delete'}}>
            Yes, Delete Method
        </button>
      {{/if}}
    </div>

  </div>{{! modal-dialog }}
</div>{{! modal }}