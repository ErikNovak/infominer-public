<div class="row document-table">
  <div class="col-lg-12">
    <div class="row">
      <div class="col-lg-12 table-options">
        {{ query-options fields=fields query=query action=changeQuery }}
        {{ pagination-limit limit=pagination.limit changeLimit=changeLimit }}
      </div>
    </div>

    <table class="table table-hover">
      <!-- Header -->
      <thead>
        <tr>
          <th class="checkbox-header" style="width:1%;"></th>
          {{#each fields as |field index|}}
            <th class="{{field.name}}" style={{columnWidth}} {{action 'sortBy' index}}>
              {{field.name}} <i class="pull-right fa fa-sort{{if field.sortType (concat "-" field.sortType)}}" aria-hidden="true"></i>
            </th>
          {{/each}}
        </tr>
      </thead>
      <!-- Body -->
      <tbody>
        {{#if documents.loading }}
          <tr class="loading">
            <td colspan="{{loading-row-width}}">
              <div class="loading">
                <i class="fa fa-circle-o-notch fa-spin fa-3x fa-fw"></i>
                <span class="sr-only">Getting documents...</span>
              </div>
            </td>
          </tr>
        {{else if documents.length}}
          <!-- if documents are available show them -->
          {{#each documents as |document| }}
            {{ document-table-row             document=document fields=fields query=query }}
            {{ document-table-row-information document=document fields=fields query=query }}
          {{/each}}
        {{else}}
          <tr>
            <td colspan="{{loading-row-width}}">
              <p>No documents found for given query parameters</p>
            </td>
          </tr>
        {{/if}}
      </tbody>
    </table>

    {{ pagination-navigation documents=documents pagination=pagination changePage=changePage }}
  </div>
    {{!-- {{ document-table-create-subset createSubset=createSubset }} --}}
</div>

{{yield}}