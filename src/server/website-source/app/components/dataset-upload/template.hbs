<div class="row">
  <div class="col-lg-12">

    <div class="dataset-label">
      <div class="row form-group">
        <label class="col-md-2 col-form-label" for="dataset-label">Dataset Name</label>
        <div class="col-md-4">
          {{
            input 
            class="form-control editing" 
            value=dataset.label 
            placeholder="Add dataset name"
          }}
        </div>
      </div>
    </div>{{! .dataset-label }}

    <div class="dataset-description">
      <div class="row form-group">
        <label class="col-md-2 col-form-label" for="dataset-description">Description</label>
        <div class="col-md-4">
          {{
            textarea 
            class="form-control editing" 
            rows="5" 
            value=dataset.description
            placeholder="Add dataset description (optional)"
          }}
        </div>
      </div>
    </div>{{! .dataset-description }}

  </div>{{! .col-lg-12 }}
</div>{{! .row }}

<div class="row">
  <div class="col-lg-12 document-table">

    <table class="table">
      <thead>
        <tr>
          <th style="width:60%">field name</th>
          <th style="width:30%" class="center">type</th>
          <th style="width:10%" class="center">included</th>
        </tr>
      </thead>
      <tbody>
        {{#each fieldList as |field index|}}
          {{
            dataset-upload-field 
            fieldList=fieldList 
            name=field.name 
            type=field.type 
            included=field.included 
            invalid=field.invalid 
            index=index
          }}
        {{/each}}
      </tbody>
    </table>

  </div>{{! .col-lg-12 }}
</div>{{! .row }}

<div class="row">
  <div class="col-lg-12">
    <button {{action submitDataset}} class="btn btn-primary pull-right">Save Dataset</button>
    <button {{action resetList}} class="btn btn-light pull-right">Cancel</button>
    <div id="submittion-error" class="pull-right">Invalid field names</div>
  </div>{{! .col-lg-12 }}
</div>{{! .row }}

{{yield}}