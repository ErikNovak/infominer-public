<!-- Create document subset -->
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <!-- modal header -->
      <div class="modal-header">
        <!-- modal title -->
        <h4 class="modal-title">Analysis selection</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div><!-- .modal-header -->

      <div class="modal-body">
        <div class="container-fluid">
          <div class="row method-selection-container">
            <div class="col-lg-12">

              <div class="form-inline">
                <label class="method-selection-label">Method</label>
                <select class="form-control" onchange={{action "changeMethodSelection" value='target.value'}}>
                  {{#each availableMethods as |method|}}
                    <option value="{{method.method}}">{{method.name}}</option>
                  {{/each}}
                </select>
              </div><!-- .form-inline -->

            </div><!-- .col-lg-12 -->
          </div><!-- .row .method-selection-container -->

          <div class="row">
            <div class="col-lg-12">
              {{ component (concat "method-selection-" renderComponentName)
                parameters=parameters
                dataset=dataset
              }}
            </div><!-- .col-lg-12 -->
          </div><!-- .row -->

          <!-- additional content -->
          <div class="row">
            <div class="col-lg-12">
              {{yield}}
            </div><!-- .col-lg-12 -->
          </div><!-- .row -->

        </div><!-- .container-fluid -->
      </div><!-- .modal-body -->

      <div class="modal-footer">
        <span id="analysis-warning" class="d-none">No fields selected</span>
        <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" {{action 'startAnalysis'}}>Start Analysis</button>
      </div>

    </div><!-- .modal-content -->
  </div><!-- .modal-dialog -->
