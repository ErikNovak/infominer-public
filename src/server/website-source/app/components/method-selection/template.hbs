{{! select analysis method and parameters }}
<div class="modal-dialog modal-dialog-centered" role="document">

  <div class="modal-content">

    {{! modal header containing the title }}
    <div class="modal-header">
      <h4 class="modal-style--analysis__title">Select Analysis Method</h4>

      <button type="button" class="btn btn-light rounded-circle"
        data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>

    </div>

    {{! modal body containing parameter selection }}
    <div class="modal-body">
      <div class="container-fluid">

        <div class="row modal-style--analysis__method">
          <div class="col">

            <div class="form-inline">
              <label class="modal-style--analysis__method--label">Select Method:</label>
              <select class="form-control" onchange={{action "changeMethodSelection" value='target.value'}}>
                {{#each availableMethods as |method|}}
                  <option value="{{method.method}}">{{method.name}}</option>
                {{/each}}
              </select>
            </div>

          </div>{{! col }}
        </div>{{! row }}

        <div class="row modal-style--analysis__parameters">
          <div class="col">
            {{ component (concat "method-selection-" renderComponentName)
              parameters=parameters
              dataset=dataset
            }}
          </div>{{! col }}
        </div>{{! modal-style--analysis__parameters }}

        <div class="row">
          <div class="col">
            {{yield}}
          </div><!-- .col-lg-12 -->
        </div><!-- .row -->

      </div><!-- .container-fluid -->
    </div><!-- .modal-body -->

    <div class="modal-footer">
      <span class="modal-style--analysis__warning" class="d-none"></span>
      <button type="button" class="btn btn-light   btn-rounded" data-dismiss="modal">Cancel</button>
      <button type="button" class="btn btn-primary btn-rounded" {{action 'startAnalysis'}}>
        Start Analysis
      </button>
    </div>

  </div><!-- .modal-content -->
</div><!-- .modal-dialog -->
