{{! dataset creation field name }}
<td class="table-field table-field__name">

  <input type="text"
    id="{{nameId}}"
    class="form-control editing {{if invalid 'invalid'}}"
    oninput={{action "changeFieldName"}}
    value={{name}}
    disabled={{disabled}}>

  {{! field name warning message }}
  <div class="table-field__name--warning">
    {{#if nameNotExists}}Field name is missing{{/if}}
    {{#if multipleNames}}Field name already in use
      {{#if invalidCharacters}}.{{/if}}
    {{/if}}
    {{#if invalidCharacters}}Remove invalid characters: {{invalidCharacters}}{{/if}}
  </div>

</td>

{{! dataset creation field type }}
<td class="table-field table-field__type">
  <select id="{{typeId}}" class="form-control table-field__type--select" onchange={{action "changeFieldType"}} disabled={{disabled}}>
    {{#each fieldTypes as |typeOption|}}
      <option value='{{typeOption.type}}' selected={{if typeOption.selected 'selected'}}>
        {{typeOption.name}}
      </option>
    {{/each}}
  </select>
</td>

{{! dataset creation field is included }}
<td class="table-field table-field__included">
  {{
    checkbox-select
    checkboxId=checkboxId
    checked=included
    checkboxAction=(action "changeFieldInclusion")
  }}
</td>

{{yield}}