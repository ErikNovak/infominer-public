<div class="modal-dialog modal-dialog-centered" role="document">

  <div class="modal-content">

    {{! modal header containing the title }}
    <div class="modal-header">

      <h4 class="modal-style--edit__title">Create Subset</h4>

      <button type="button" class="btn btn-light rounded-circle"
        data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>

    </div>


    <div class="modal-body">
      <div class="container-fluid modal-style--edit_description">

        {{! edit the subset label }}
        <div class="form-group row">
          <label class="col-md-3 col-form-label">Label</label>
          <div class="col-md-9">
            <input type="text" class="form-control editing emphasize {{if invalid "invalid"}}"
              oninput={{action 'changeSubsetName'}}
              value={{name}}
              placeholder="Add subset name">

            <div class="modal-style--edit__warning modal-style--edit__warning--small text-right">
              {{#if invalid}}Subset label should be given{{/if}}
            </div>

          </div>
        </div>

        {{! edit the subset description }}
        <div class="form-group row">
          <label class="col-sm-3 col-form-label">Description</label>
          <div class="col-sm-9">
            <textarea
              class="form-control editing"
              rows="5"
              oninput={{action 'changeSubsetDescription'}}
              placeholder="Add subset description (optional)"
              value={{description}}
            ></textarea>
          </div>
        </div>

      </div>
    </div>

    <div class="modal-footer">
      <button type="button" class="btn btn-light   btn-rounded" data-dismiss="modal">Cancel</button>
      <button type="button" class="btn btn-primary btn-rounded" {{action 'saveSubset'}}>
        Save Subset
      </button>
    </div>

  </div>{{! .modal-content }}
</div>{{! .modal-dialog }}
