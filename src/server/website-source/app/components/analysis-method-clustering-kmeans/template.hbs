<h3 class="method-type text-capitalize">
  <button class="btn btn-xs rotate {{if collapsed 'right'}}" data-toggle="collapse"
    aria-expanded="false" onclick={{action 'toggleInformation'}}>
    <i class="fa fa-chevron-down"></i>
  </button>

  Clustering

  <button type="button" class="btn btn-light rounded-circle pull-right" data-toggle="modal"
    data-target="#method-delete-modal" data-methodid="{{method.id}}">
    <span aria-hidden="true">Ã—</span>
  </button>

</h3>

<div class="row">
  <div class="col-md-12 method-parameters">

    <div class="parameter">
      <span class="parameter-label">Type: </span>
      <span class="parameter-value">
        {{method.parameters.method.clusteringType}}
        ({{selectedFields}})
        </span>
    </div>

    <div class="parameter">
      <span class="parameter-label">Number of clusters: </span>
      <span class="parameter-value">{{method.parameters.method.k}}</span>
    </div>

  </div>
</div>

{{#bs-collapse collapsed=collapsed}}
  <div class="clusters">
    {{#each method.result.clusters as |cluster index|}}
      {{#unless cluster.subset.deleted}}
        <div class="row">
          <div class="col-lg-12">
            {{ analysis-clustering-kmeans-cluster
              dataset=dataset
              method=method
              cluster=cluster
              index=index
            }}
          </div><!-- .col-lg-12 -->
        </div><!-- .row -->
      {{/unless}}
    {{/each}}
  </div>
{{/bs-collapse}}

{{yield}}