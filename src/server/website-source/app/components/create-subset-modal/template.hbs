{{! Create document subset }}
<div role="document" class="modal-dialog modal-dialog-centered">
  <div class="modal-content">
    {{! modal header }}
    <div class="modal-header">
      {{! modal title }}
      <div class="modal-header-title">
        <h4 class="modal-title">Create Subset</h4>
        <p class="modal-subtitle">{{type}}</p>
      </div>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body new-subset">
      <div class="container-fluid">

        {{! subset label }}
        <div class="form-group row new-subset-information">
          <label class="col-md-3 col-form-label">Subset label</label>
          <div class="col-md-9">
            <input type="text" class="form-control editing emphasize {{if invalid "invalid"}}"
              oninput={{action 'changeSubsetName'}} value={{name}}
              placeholder="Add subset name">
             <div class="field-warning text-right">
              {{#if invalid}}Subset name should be given{{/if}}
            </div>
          </div>
        </div>

        {{! subset description }}
        <div class="form-group row new-subset-information">
          <label class="col-sm-3 col-form-label">Description</label>
          <div class="col-sm-9">
            <textarea class="form-control editing" rows="5"
              oninput={{action 'changeSubsetDescription'}}
              placeholder="Add subset description (optional)"
              value={{description}}></textarea>
          </div>
        </div>

        {{! additional content }}
        <div class="row">
          <div class="col-lg-12">
            {{yield}}
          </div>
        </div>

        {{! warning placeholder }}
        <div class="row">
          <div class="col-lg-12">
            <div class="warning"></div>
          </div>
        </div>

      </div>
    </div>

    <div class="modal-footer">
      <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
      <button {{action 'saveSubset'}} type="button" class="btn btn-primary">Save</button>
    </div>

  </div>{{! .modal-content }}
</div>{{! .modal-dialog }}
