<!-- empty data table -->
<td class="clickable" data-toggle="collapse" data-target="#{{collapseId}}"></td>

<!-- document values content -->
<td class="clickable" data-toggle="collapse" data-target="#{{collapseId}}" 
  colspan="{{numberOfColumns}}">

  <div class="collapse document-attributes" id="{{collapseId}}">

    <!-- Fill the container with documents -->
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <h6 class="subset">Document values</h6>
          </div>
        </div>
        {{#each documentValues as |value|}}
        <div class="row">
          <div class="col-lg-2 subset field-value">{{value.field}}</div>
          <div class="col-lg-10">{{{value.value}}}</div>
        </div>
        {{/each}}
      </div><!-- .container -->

  </div><!-- .collapse -->
</td>