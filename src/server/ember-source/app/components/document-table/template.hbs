<div class="row document-table">
  <div class="col-lg-12">

    <div class="row">
      <div class="col-lg-12 table-options">
        {{ pagination-limit limit=pagination.limit changeLimit=changeLimit }}
      </div>
    </div>


    <table class="table table-hover">
      <!-- Header -->
      <thead>
        <tr>
          <th></th>
          <th>id</th>
          {{#each fields as |field|}}
            <th>{{field.name}}</th>
          {{/each}}
        </tr>
      </thead>
      <!-- Body -->
      <tbody>
        {{#each documents as |document| }}
          {{ document-table-row document=document fields=fields }}
        {{/each}}
      </tbody>
    </table>

    {{ pagination-navigation pagination=pagination documents=documents changePage=changePage }}

  </div>
</div>

{{yield}}