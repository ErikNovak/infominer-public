<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12 col-lg-offset-1 col-lg-11">

      <div class="row">
        <div class="col-sm-5 col-md-4">
          <!-- dataset navigation -->
          <h4 class="description-header">Structure</h4>
          {{#each dataset.hasSubsets as |subset|}}
            {{#link-to 'dataset.subset.statistics' dataset subset }}
              {{subset.label}}
            {{/link-to}}
          {{/each}}
        </div>
        <div class="col-sm-7 col-md-8">
          <!-- Subset content -->
          {{yield}}
        </div>
      </div>

    </div><!-- .col-sm-12.col-lg-offset-1.col-lg-10 -->
  </div><!-- .row -->
</div><!-- .container-fluid -->