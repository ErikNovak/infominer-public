<!-- render component based on method type -->
{{#if method.result}}
  {{ component methodComponent method=method }}
{{else}}
  <div class="col-lg-10">
    <div class="loading">
      <i class="fa fa-refresh fa-spin fa-3x fa-fw"></i>
      <span class="sr-only">Loading...</span>
    </div>
  </div>
{{/if}}