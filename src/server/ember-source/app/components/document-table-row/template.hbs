<!-- document selection checkbox -->
<td>
  {{ checkbox-select
    checkboxId=(concat "checkbox-" index)
    checked=selected
    checkboxAction=(action 'selectDocument')
  }}
</td>
<!-- document values -->
{{#each docValues as |value|}}
  <td class="{{ value.field }} clickable" data-toggle="{{dataToggle}}"
    data-target="{{dataTarget}}">{{ value.value }}</td>
{{/each}}

{{yield}}