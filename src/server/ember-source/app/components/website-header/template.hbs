<!-- Navigation bar top -->
<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">

    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#website-header" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand">InfoMiner</a>
    </div><!-- .navbar-header -->

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="website-header">
      <ul class="nav navbar-nav">
        <li class="link">
          {{#link-to "datasets" }}
            <i class="fa fa-database"></i>datasets
          {{/link-to}}
        </li>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        {{#if session.isAuthenticated}}
          <li class="user-info dropdown">
            <!-- user information and logout -->
            <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-exanded="false">
              <img src="{{ session.data.authenticated.userImage }}"
                   onError="this.src='images/login/blank-profile.png'" alt="user image" height="30" width="30">
              {{ session.data.authenticated.username }}
            </a>
            <ul class="dropdown-menu">
              <li><a {{action 'invalidateSession'}}>Logout</a></li>
            </ul>
          </li>
        {{else}}
          <li class="link login">
            {{#link-to "login" class="btn"}}
              Sign In
            {{/link-to}}
          </li>
        {{/if}}
      </ul>
    </div>

  </div><!-- .container-fluid -->
</nav>

{{yield}}