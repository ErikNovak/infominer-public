<!-- Create document subset -->
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <!-- modal header -->
      <div class="modal-header">
        <div class="modal-header-title">
         <!-- modal title -->
          <h4 class="modal-title">Create Subset</h4>
          <p class="modal-subtitle">{{type}}</p>
        </div><!-- .modal-header-title -->
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div><!-- .modal-header -->

      <div class="modal-body new-subset">
        <div class="container-fluid">

          <!-- subset label -->
          <div class="row new-subset-information">
            <div class="col-lg-6">
              <label>Subset Name</label>
              <input type="text" class="form-control"
                oninput={{action 'changeSubsetName'}} value={{subsetName}}
                placeholder="Add subset name">
            </div><!-- .col-lg-6 -->
          </div><!-- .row .new-subset-information -->

          <!-- subset description -->
          <div class="row new-subset-information">
            <div class="col-lg-12">
              <div class="form-group">
                <label>Description</label>
                <textarea class="form-control" rows="5"
                   oninput={{action 'changeSubsetDescription'}}
                  placeholder="Add subset description (optional)"></textarea>
              </div><!-- .form-group -->
            </div><!-- .col-lg-12 -->
          </div><!-- .row .new-subset-information -->

          <!-- additional content -->
          <div class="row">
            <div class="col-lg-12">
              {{yield}}
            </div><!-- .col-lg-12 -->
          </div><!-- .row -->

          <!-- warning placeholder -->
          <div class="row">
            <div class="col-lg-12">
              <div class="warning"></div>
            </div><!-- .col-lg-12 -->
          </div><!-- .row -->

        </div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button {{action 'saveSubset'}} type="button" class="btn btn-primary">Save Subset</button>
      </div><!-- .modal-footer -->

    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->