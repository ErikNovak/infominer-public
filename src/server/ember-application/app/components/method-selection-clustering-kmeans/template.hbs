<div class="row">
  <div class="col-lg-12">

    <p class="method-description">
      <span class="highlight-text-only">KMeans Clustering</span> will group
      documents that are similar to each other. The number of groups is specified
      with the <span class="highlight">Number of clusters</span> parameter.
      Similarity is measured using <span class="highlight">Distance Metrics</span>.
    </p>

  </div><!-- .col-lg-12 -->
</div><!-- .row -->

<div class="row">

  <div class="col-sm-6">
    <div class="form-group">
      <label class="method-selection-label parameter">Number of clusters</label>
      <input type="number" class="form-control" min="2" step="1" value={{k}}
        oninput={{action 'selectNumberOfClusters' value='target.value'}}
        placeholder="Input number of clusters"
      />
    </div><!-- .form-group -->
  </div><!-- .col-lg-6 -->

  <div class="col-sm-6">
    <div class="form-group">
      <label class="method-selection-label parameter">Distance Metrics</label>
      <select class="form-control" onchange={{action 'selectDistanceMetrics' value="target.value"}}>
        {{#each distanceMetrics as |metrics index|}}
          <option value='{{index}}'>{{metrics.fullName}}</option>
        {{/each}}
      </select>
    </div><!-- .form-group -->
  </div><!-- .col-lg-6 -->

</div><!-- .row -->

<div class="row">
  <div class="col-lg-12">
    {{ method-selection-feature-selection
      parameters=parameters
      dataset=dataset
    }}
  </div><!-- .col-lg-12 -->
</div><!-- .row -->

{{yield}}